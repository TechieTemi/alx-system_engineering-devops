#!/usr/bin/env bash
# A script that configures an Ubuntu server wiht the below requiremenii.

# Copy the original hosts file to a new location
cp /etc/hosts ~/Dorcas

# Modify the new hosts file to update the resolution
echo "localhost 127.0.0.2" >> ~/Dorcas
echo "8.8.8.8 facebook.com" >> ~/Dorcas

# Copy the modified hosts file to /etc/hosts
cp -f ~/Dorcas /etc/hosts

# Restart the networking service to apply changes (optional)
# sudo systemctl restart networking.service

# Inform the user about the completion
echo "Hosts file configured successfully."

